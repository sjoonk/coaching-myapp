<!DOCTYPE html>
<html>
<head>
  <title>Myapp</title>
  <%= stylesheet_link_tag 'bootstrap', 'style' %>
  <%= javascript_include_tag :defaults, 'jquery.timeago' %>
  <%= csrf_meta_tag %>
</head>
<body class="container">

	<ul class="nav" id="top_nav">
		<% if current_user %>
			<%= link_to "Home", root_path %> |
			Logged in as <%= link_to current_user, current_user %> |
			<%= link_to "Logout", destroy_user_session_path, :method => :delete, :class => 'logout' %>
		<% else %>
			<%= link_to "Log In", new_user_session_path %> |
			<%= link_to "Sign Up", new_user_registration_path %>
			<%#= render 'layouts/login' %>
		<% end %>
	</ul>	

	<% if notice %>
		<p class="alert"><%= notice %></p>
	<% elsif alert %>	
  	<p class="alert alert-error"><%= alert %></p>
	<% end %>	

	<%= yield %>

</body>
</html>
